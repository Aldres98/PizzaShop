<div class="container">

<div class="row">
    <% @products.each do |i| %>
    <div class="сol-xs-6 col-sm-6 col-md-4 col-lg-3">
        <div>
            <a href="/pizza/<%= i.id %>
                ">
                <p> <strong><%= i.title %></strong>
                </p>
                <img src="<%= i.path_to_image %>
                " href="" style="max-width: 200px; max-height: 200px;" border="0">
            </img>
        </a>
    </div>
    <div>
        <img src="/images/price.png/">
        Price:
        <%= i.price %></img>
</div>

<div>
    <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= i.id %>)"> Add to cart</button>
</div>
</div>

<% end %></div>
</div>




